<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.blog.mapper.SysUserMapper">

    <select id="selectByUserName" resultType="com.example.blog.domain.entity.SysUser">
        select *
        from sys_user
        where delete_flag = 0 and user_name = #{userName}
    </select>
    <select id="selectByPage" resultType="com.example.blog.domain.entity.SysUser">
        select *
        from sys_user
        where delete_flag = 0
        <if test="queryDTO.userName != null and queryDTO.userName != ''">
            and user_name = #{queryDTO.userName}
        </if>
    </select>
</mapper>

